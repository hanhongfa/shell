gpgcheck=1
gpgkey=https://repo.huaweicloud.com/centos/RPM-GPG-KEY-CentOS-7

[epel]
name=Centos EPEL
baseurl=https://repo.huaweicloud.com/epel/7/x86_64/
gpgcheck=0
